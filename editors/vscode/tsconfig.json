{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "outDir": "out",
        "lib": ["ES2020"],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        /* Additional Checks */
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true
    }
}
